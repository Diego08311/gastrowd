@{
    Layout = "_Layout";
}
<link href="~/css/pgprincipal.css" rel="stylesheet" />
<style>
   .fondo{
       background:#E8DCCA;
   }
    .container {
        max-width: 1500px; /* Establece un ancho máximo para el contenedor */
        margin: 0 auto; /* Centra el contenedor horizontalmente */
        padding: 0 20px; /* Agrega un margen a los lados */
        background-color: white;
    }

    .image-container {
        position: relative; /* Establece el contenedor como posicionado relativamente */
        width: 100%;
        height: auto;
    }

        .image-container img {
            width: 100%;
            height: auto;
            display: block;
        }

        .image-container span {
            position: absolute; /* Posiciona el encabezado de forma absoluta dentro del contenedor */
            top: 10px; /* Ajusta la distancia desde la parte superior */
            left: 10px; /* Ajusta la distancia desde la parte izquierda */
            color: black; /* Establece el color del texto */
            padding: 5px 10px; /* Agrega un poco de espacio alrededor del texto */
            margin: 0; /* Elimina el margen predeterminado del encabezado */
        }

    .fondo {
        margin: 0;
        padding: 0;
        height: auto;
        background-image: url("https://lendan.com/wp-content/uploads/2019/01/influencia-alimentacion-piel.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        position: relative;
        z-index: 1;
        padding: 20px;
        color: black;
    }

    .image- {
        width: 100%;
        height: 300px;
    }

        .image- img {
            width: 100%;
            height: 300px;
            object-fit: contain;
        }
</style>
